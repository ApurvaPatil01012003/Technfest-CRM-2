<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/toolbar_gradient"
                android:gravity="center_vertical"
                app:contentInsetEnd="16dp"
                app:contentInsetStartWithNavigation="16dp"
                app:navigationIcon="@drawable/baseline_menu_24"
                app:navigationIconTint="@color/black"
                app:subtitle="Today's summary &amp; follow-ups"
                app:subtitleTextAppearance="@style/ToolbarSubtitleText"
                app:subtitleTextColor="@color/black"
                app:title="Technfest Workspace"
                app:titleCentered="false"
                app:titleTextAppearance="@style/ToolbarTitleText"
                app:titleTextColor="@color/black" />
        </com.google.android.material.appbar.AppBarLayout>


        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Custom Drawer -->
    <include
        android:id="@+id/customDrawer"
        layout="@layout/custom_drawer"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />
</androidx.drawerlayout.widget.DrawerLayout>
