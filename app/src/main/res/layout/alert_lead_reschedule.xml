<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_14sdp"
        app:cardElevation="@dimen/_4sdp"
        app:strokeColor="#DDDDDD"
        app:strokeWidth="@dimen/_1sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvRescheduleTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reschedule Follow-up"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:id="@+id/tvRescheduleCurrent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current: Today 11:00"
                        android:textColor="#858484"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/baseline_close_24"
                    app:tint="#6C63FF"
                    android:contentDescription="Close"
                    android:background="@drawable/gray_circle_bg"
                    android:padding="@dimen/_4sdp" />
            </LinearLayout>

            <!-- New Date -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Date"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_4sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="mm/dd/yyyy"
                android:background="@drawable/edit_text_bg"
                android:drawableEnd="@drawable/baseline_date_range_24"
                android:padding="@dimen/_8sdp"
                android:inputType="date" />

            <!-- New Time -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Time"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_8sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select time"
                android:background="@drawable/edit_text_bg"
                android:drawableEnd="@drawable/baseline_watch_later_24"
                android:padding="@dimen/_8sdp"
                android:inputType="time" />

            <!-- Reason Dropdown -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reason"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_8sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp">

                <Spinner
                    android:id="@+id/spinnerReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:popupBackground="@color/white"
                    android:dropDownVerticalOffset="@dimen/_8sdp"
                    android:gravity="center_vertical|start" />
            </RelativeLayout>

            <!-- Reminder Checkbox -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_6sdp">

                <CheckBox
                    android:id="@+id/checkBoxReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_6sdp" />

                <TextView
                    android:id="@+id/textReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set reminder notification"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    app:cornerRadius="12dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_gradient"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="#6475D0"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    app:cornerRadius="12dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:backgroundTint="@android:color/white"
                    app:strokeWidth="2dp"
                    app:strokeColor="#6475D0" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
