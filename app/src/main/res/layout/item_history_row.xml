    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/tvTitle" android:text="Lead • John Doe"
        android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvSubtitle" android:text="Connected • ★4 • ₹0 • Source FB"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvTime" android:text="Yesterday 4:58 PM" android:textSize="12sp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
