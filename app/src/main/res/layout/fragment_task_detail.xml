<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F4F6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- HEADER -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_14sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Task Details"
                            android:textSize="@dimen/_16ssp"
                            android:textStyle="bold"
                            android:textColor="#111827" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="#E5E7EB" />
                    </LinearLayout>

                    <!-- CONTENT -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_14sdp"
                        android:orientation="vertical">

                        <!-- LINKED LEAD -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Linked Lead"
                            android:textStyle="bold"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtLeadName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:layout_marginBottom="@dimen/_10sdp" />

                        <!-- STATUS + PRIORITY -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/_14sdp">

                            <TextView
                                android:id="@+id/txtStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_4sdp"
                                android:textColor="#065F46"
                                android:background="@drawable/bg_status_tag" />

                            <TextView
                                android:id="@+id/txtPriority"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_4sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:textColor="#991B1B"
                                android:background="@drawable/bg_priority_tag" />
                        </LinearLayout>

                        <!-- DUE DATE -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Due Date &amp; Time"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/txtDue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:layout_marginBottom="@dimen/_12sdp" />

                        <!-- ASSIGNED TO -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Assigned To"
                            android:textStyle="bold"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtAssignTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:layout_marginBottom="@dimen/_12sdp" />

                        <!-- TASK TYPE -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Task Type"
                            android:textStyle="bold"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtTaskType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:layout_marginBottom="@dimen/_12sdp" />

                        <!-- ESTIMATED HOURS -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Required Hours"
                            android:textStyle="bold"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtEstimateHours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:layout_marginBottom="@dimen/_14sdp" />

                        <!-- DESCRIPTION -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Task Description"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:layout_marginBottom="@dimen/_6sdp" />

                        <TextView
                            android:id="@+id/txtDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13ssp"
                            android:textColor="#374151"
                            android:lineSpacingExtra="4dp"
                            android:padding="@dimen/_12sdp"
                            android:background="@drawable/bg_description" />

                        <!-- CHANGE STATUS -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_14sdp"
                            android:text="Change status of task"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:background="@drawable/spinner_background">

                            <Spinner
                                android:id="@+id/spnStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_2sdp"
                                android:paddingRight="@dimen/_26sdp"
                                android:popupBackground="@color/white"
                                android:spinnerMode="dropdown" />
                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/layoutReschedule"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:text="ReScheduled Follow-up Date &amp; Time (optional)"
                                android:textColor="@color/tc_secondary_text"
                                android:textSize="@dimen/_12ssp" />

                            <EditText
                                android:id="@+id/edtFollowUpdate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:background="@drawable/edit_text_bg"
                                android:drawableEnd="@drawable/baseline_date_range_24"
                                android:hint="mm/dd/yy"
                                android:inputType="phone"
                                android:padding="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
