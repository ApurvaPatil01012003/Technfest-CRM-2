<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/popup_bg"
    android:elevation="@dimen/_8sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvLeadName"
            android:text="Ramesh Kumar"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/baseline_close_24"
            android:padding="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvMobile"
        android:text="+91 9876543210"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Last Call Info -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvLastCallTime"
            android:text="Last Call: 10 Aug 2025, 3:30 PM"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvLastCallBy"
            android:text="By: John (Sales Team)"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_12sdp"/>

        <TextView
            android:id="@+id/tvFeedbackNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reson of why last calling"
            android:textSize="@dimen/_12ssp"
            android:maxLines="3"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_12sdp"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginBottom="8dp"/>

    <!-- VIEW BUTTON -->
    <TextView
        android:id="@+id/tvViewLead"
        android:text="VIEW"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
