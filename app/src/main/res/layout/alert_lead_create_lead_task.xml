<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_14sdp"
        app:cardElevation="@dimen/_4sdp"
        app:strokeColor="#DDDDDD"
        app:strokeWidth="@dimen/_1sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvRescheduleTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Task"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:id="@+id/tvRescheduleCurrent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lead Name"
                        android:textColor="#858484"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/baseline_close_24"
                    app:tint="#6C63FF"
                    android:contentDescription="Close"
                    android:background="@drawable/gray_circle_bg"
                    android:padding="@dimen/_4sdp" />
            </LinearLayout>

            <!-- Scrollable Form -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <!-- Task Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Task Title"
                        android:textColor="#9E9B9B"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg"
                        android:padding="@dimen/_10sdp"
                        android:hint="Call to confirm order quantity"
                        android:textSize="@dimen/_12ssp" />

                    <!-- Description -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="#9E9B9B"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <EditText
                        android:id="@+id/etNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Details about what needs to be done..."
                        android:background="@drawable/edit_text_bg"
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:scrollbars="vertical"
                        android:padding="@dimen/_8sdp"
                        android:minLines="3"
                        android:maxLines="999"
                        android:scrollHorizontally="false"
                        android:layout_marginTop="@dimen/_4sdp" />

                    <!-- Due Date -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Due Date"
                        android:textColor="#9E9B9B"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="mm/dd/yyyy"
                        android:background="@drawable/edit_text_bg"
                        android:drawableEnd="@drawable/baseline_date_range_24"
                        android:padding="@dimen/_8sdp"
                        android:focusable="false"/>

                    <!-- Due Time -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Due Time"
                        android:textColor="#9E9B9B"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select time"
                        android:background="@drawable/edit_text_bg"
                        android:drawableEnd="@drawable/baseline_watch_later_24"
                        android:padding="@dimen/_8sdp"
                        android:focusable="false"/>

                    <!-- Priority -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Priority"
                        android:textColor="#9E9B9B"
                        android:layout_marginTop="@dimen/_8sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_background"
                        android:padding="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_4sdp">

                        <Spinner
                            android:id="@+id/spinnerPriority"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dropdown"
                            android:popupBackground="@color/white"
                            android:gravity="center_vertical|start" />
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Check Task"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="@dimen/_4sdp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_gradient"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="#6475D0"
                    android:layout_marginStart="@dimen/_4sdp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@android:color/white"
                    app:strokeWidth="2dp"
                    app:strokeColor="#6475D0" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
