<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="@dimen/_8sdp">

    <!-- Name + Location + Priority -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/leadName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amit Sharma"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/leadLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location : Delhi, New Delhi"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13ssp"
                android:ellipsize="end"
                android:singleLine="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/leadPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_text"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>

    <!-- Source + Task + Task Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_8sdp"
        android:paddingTop="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source : Facebook"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/leadTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

        <TextView
            android:id="@+id/taskStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demo Scheduled"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_text"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>

    <!-- Status + Stage + Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_8sdp"
        android:paddingTop="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status : Active"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/leadStage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stage : Demo Schedule"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today 11:00am"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_text"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>

    <!-- Company + Owner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_8sdp"
        android:paddingTop="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company : "
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/leadOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner Name"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_4sdp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="#E0E0E0" />

</LinearLayout>
