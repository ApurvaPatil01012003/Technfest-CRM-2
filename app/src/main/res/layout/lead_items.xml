<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_2sdp">

    <!-- Card Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/bg_lead_card"
        android:elevation="@dimen/_4sdp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Avatar -->
            <TextView
                android:id="@+id/leadAvatar"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/gradient_circle"
                android:gravity="center"
                android:text="A"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <!-- Name, Number, Status+Stage -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/leadName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amit Sharma"
                    android:textStyle="bold"
                    android:textColor="#7283E2"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/leadNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91 1111111111"
                    android:textColor="#6975BA"
                    android:textSize="@dimen/_9ssp" />

                <!-- Status + Stage -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_2sdp">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active"
                        android:textColor="#027A48"
                        android:background="@drawable/bg_status_tag"
                        android:paddingHorizontal="@dimen/_4sdp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:id="@+id/leadStage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:text="Demo Scheduled"
                        android:background="@drawable/bg_stage_tag"
                        android:paddingHorizontal="@dimen/_4sdp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:textColor="#554EDD"
                        android:textSize="@dimen/_8ssp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Priority -->
            <TextView
                android:id="@+id/leadPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_4sdp"
                android:background="@drawable/bg_priority_tag"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
