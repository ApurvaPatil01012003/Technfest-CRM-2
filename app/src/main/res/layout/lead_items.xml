<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp">

    <!-- Card Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/bg_lead_card"
        android:elevation="@dimen/_4sdp">

        <!-- Name + Priority -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/leadName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amit Sharma"
                    android:textStyle="bold"
                    android:textColor="#1331DB"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/leadNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91 1111111111"
                    android:textColor="#6975BA"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>

            <!-- Priority Tag -->
            <TextView
                android:id="@+id/leadPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_4sdp"
                android:background="@drawable/bg_priority_tag"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

        <!-- LOCATION + SOURCE + TASK -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/_6sdp">

            <TextView
                android:id="@+id/leadLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delhi, New Delhi"
                android:textColor="#444444"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:textColor="#666666"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>




            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company: "
                android:textColor="#777777"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/leadOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner Name"
                android:textColor="#444444"
                android:textSize="@dimen/_10ssp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_6sdp">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="#027A48"
                android:background="@drawable/bg_status_tag"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_4sdp"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/leadStage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Demo Scheduled"
                android:background="@drawable/bg_stage_tag"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_4sdp"
                android:textColor="#554EDD"
                android:textSize="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_6sdp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
