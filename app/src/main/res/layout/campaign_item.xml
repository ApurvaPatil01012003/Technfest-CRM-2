<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/_14sdp"
    app:cardElevation="@dimen/_6sdp"
    app:strokeColor="#DDDDDD"
    app:strokeWidth="@dimen/_1sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">

        <!-- Campaign Name -->
        <TextView
            android:id="@+id/campaignName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_6sdp"
            android:text="Name of Campaign"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <!-- Type -->
        <TextView
            android:id="@+id/txtType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_8sdp"
            android:text="Type : Call"
            android:textColor="#444444"
            android:textSize="@dimen/_13ssp" />

        <!-- Date + Owner Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_8sdp">

            <!-- Date Range -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Range"
                    android:textColor="#716E6E"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/txtDateRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01 Nov 2025 → Ongoing"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Owner -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner"
                    android:textColor="#716E6E"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/txtOwnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XYZ"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <!-- Budget / Leads -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_8sdp">

            <!-- Budget / Spend -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budget / Spend"
                    android:textColor="#716E6E"
                    android:textSize="@dimen/_11ssp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtBudget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹8,000"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/txtSpend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹3,100"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Leads / CPL -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leads / CPL"
                    android:textColor="#716E6E"
                    android:textSize="@dimen/_11ssp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_2sdp">

                    <TextView
                        android:id="@+id/txtLeads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24 leads"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/txtCpl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹129"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Status / ROI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_8sdp">

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textview_bg"
                android:gravity="center"
                android:layout_margin="@dimen/_2sdp"
                android:padding="@dimen/_6sdp"
                android:text="Status"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/txtROI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/textview_bg"
                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:text="ROI"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

        <!-- Tags Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_4sdp"
            android:text="Tags"
            android:textColor="#716E6E"
            android:textSize="@dimen/_12ssp" />

        <!-- Tag Chips -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_8sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#E7CFEB"
                android:padding="@dimen/_4sdp"
                android:text="billing" />

            <TextView
                android:background="#E7CFEB"
                android:padding="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="demo" />

            <TextView
                android:background="#E7CFEB"
                android:padding="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location" />
        </LinearLayout>

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_weight="1"
                android:background="@drawable/btn_gradient"
                android:text="Pause campaign"
                android:textColor="@android:color/white"
                app:backgroundTint="@null"
                app:cornerRadius="@dimen/_10sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit"
                android:textColor="#6475D0"
                app:backgroundTint="@android:color/white"
                app:cornerRadius="@dimen/_10sdp"
                app:strokeColor="#6475D0"
                app:strokeWidth="@dimen/_1sdp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
