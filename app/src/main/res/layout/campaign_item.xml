<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/tc_divider" />


    <!-- Campaign Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="@dimen/_2sdp"
        app:strokeWidth="0.5dp"
        app:strokeColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="@dimen/_6sdp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/change"
                     />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/campaignName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FB â€“ Diwali Offer"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/tc_primary_text" />

                    <TextView
                        android:id="@+id/txtType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facebook Lead"
                        android:textSize="11sp"
                        android:textColor="@color/tc_secondary_text" />
                </LinearLayout>

                <!-- Status -->
                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAUSED"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:textColor="@color/tc_positive"
                    android:background="@drawable/tag_chip_bg" />
            </LinearLayout>



            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Total Calls -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Calls"
                        android:textSize="11sp"
                        android:textColor="@color/tc_secondary_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtTotalCalls"
                        android:text="127"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/tc_primary_text" />
                </LinearLayout>

                <!-- Budget -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budget / Spend"
                        android:textSize="11sp"
                        android:textColor="@color/tc_secondary_text" />

                    <TextView
                        android:id="@+id/txtBudget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000 / 1200"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/tc_primary_text" />
                </LinearLayout>

                <!-- Leads -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leads / CPL"
                        android:textSize="11sp"
                        android:textColor="@color/tc_secondary_text" />

                    <TextView
                        android:id="@+id/txtLeads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 / 6.0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/tc_primary_text" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Separator between campaigns -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/tc_divider" />

</LinearLayout>
