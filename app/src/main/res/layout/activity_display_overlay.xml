<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.DisplayOverlayActivity">
    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/overlay"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_50sdp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display Over Other apps"
        android:textSize="@dimen/_26sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_20sdp"
        android:textAlignment="center"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Technfest crm requires the display over other apps permission solely to display a caller ID popup for incoming and outgoing calls from leads . This permission is not utilized for any other purpose."
        android:layout_margin="@dimen/_20sdp"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAllow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="Allow Access"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18ssp"
        app:cornerRadius="@dimen/_8sdp"
        android:background="@drawable/btn_gradient"
        app:backgroundTint="@null"
        app:rippleColor="#5E00C0"
        android:padding="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        android:elevation="@dimen/_4sdp"
        android:fontFamily="sans-serif-medium"
        />


    <TextView
        android:id="@+id/txtSkip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textSize="@dimen/_12sdp"
        android:textAlignment="center"
        android:textColor="#3F51B5"/>
</LinearLayout>