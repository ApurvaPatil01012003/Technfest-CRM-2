<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background gradient -->
    <gradient
        android:startColor="#97F89C"
        android:endColor="#A3C7A5"
        android:angle="0" />

    <!-- Rounded corners -->
    <corners android:radius="@dimen/_2sdp" />

    <!-- Padding inside the shape -->
    <padding
        android:left="@dimen/_8sdp"
        android:top="@dimen/_6sdp"
        android:right="@dimen/_8sdp"
        android:bottom="@dimen/_6sdp" />

    <!-- Border / Stroke -->
    <stroke
        android:width="@dimen/_1sdp"
        android:color="#A29A9A" />  <!-- Change color as needed -->

</shape>
