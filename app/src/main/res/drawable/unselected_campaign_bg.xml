<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient for soft 3D effect -->
    <gradient
        android:startColor="#FFFFFF"
        android:centerColor="#F0F2F7"
        android:endColor="#E6EAF0"
        android:angle="90" />

    <!-- Rounded corners -->
    <corners android:radius="@dimen/_6sdp" />

    <!-- Padding inside the shape -->
    <padding
        android:left="@dimen/_8sdp"
        android:top="@dimen/_6sdp"
        android:right="@dimen/_8sdp"
        android:bottom="@dimen/_6sdp" />

    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#C0C5D1" />

    <!-- Optional: shadow effect for elevation illusion (API 21+) -->
    <solid android:color="#FFFFFF" />
</shape>
